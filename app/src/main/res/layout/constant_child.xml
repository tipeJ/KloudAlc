<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp"
        android:id="@+id/constant_child_title"
        android:textSize="10pt"
        android:textStyle="bold"
        android:textColor="@color/colorSecondaryDark"
        android:text="e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/constant_child_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp"
        android:id="@+id/constant_child_value"
        android:textColor="@color/colorSecondaryDark"
        android:textSize="5pt"
        android:textStyle="italic"
        android:text="2.723"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.yade.kloudalc.Views.RectButton
        android:foregroundGravity="center_vertical"
        android:id="@+id/constant_child_help"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_help_outline_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.yade.kloudalc.Views.RectButton
        android:foregroundGravity="center_vertical"
        android:id="@+id/constant_child_copy"
        android:src="@drawable/ic_content_copy_black_24dp"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/constant_child_help"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:textColor="@color/colorSecondaryDark"
        app:layout_constraintRight_toLeftOf="@id/constant_child_copy"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/constant_child_description"
        android:textSize="5pt"
        android:text="2.723"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/dark"
        app:layout_constraintTop_toBottomOf="@id/constant_child_description"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>

</android.support.constraint.ConstraintLayout>